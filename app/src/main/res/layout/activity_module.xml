<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="#E91E63"
    android:gravity="center"
    android:id="@+id/rootModule"
    tools:context=".ModuleActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="5"
        android:id="@+id/userArea"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#9B2515"
            android:gravity="center"
            android:weightSum="10"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="USER\nAREA"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textColor="#FFF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textColor="#FFF"
                android:text="Bike,Car,Food,Parcel"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="5"
        android:id="@+id/riderArea"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:background="#347505"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:text="RIDER\nAREA"
                android:textAlignment="center"
                android:textSize="36sp"
                android:textColor="#FFF"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:textAlignment="center"
                android:text="Any Interested Rider Allowed"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>